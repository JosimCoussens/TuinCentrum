<Window x:Class="TuinCentrum.Windows.dashboard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TuinCentrum.Windows"
        mc:Ignorable="d"
        Title="dashboard" Height="675" Width="1200">
    <Grid>
        <!-- Welkomstboodschap -->
        <TextBlock Text="Welkom!" FontSize="36" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,20,0,0" />

        <!-- Knoppen voor verschillende functies -->
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,50,0,0">
            <Button Content="Nieuwe Offerte" Width="240" Height="40"  Margin="10" />
            <Button Content="Klanten Zoeken" Width="240" Height="40" Margin="10" />
            <Button Content="Offertes Zoeken" Width="240" Height="40" Margin="10" />
            <Button Content="Producten Beheren" Width="240" Height="40" Margin="10" />
        </StackPanel>
    </Grid>
</Window>